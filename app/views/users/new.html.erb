<% if flash[:no_user] %>
    <p><%= flash[:no_user] %></p>
<% end %>

<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.submit %>
  
<% end %>