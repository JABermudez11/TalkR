<%= form_for(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label "Select Your Preferred Language:" %>
  <%= f.collection_select :language_id, Language.all, :id, :name %>
  <%= f.submit %>
  
<% end %>